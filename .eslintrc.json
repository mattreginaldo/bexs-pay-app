{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },

  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "overrides": [
    {
      "files": ["**/*.test.js", "**/*.test.jsx", "**/*.tsx"],
      "rules": {
        "no-undef": "off"
      },
      "env": {
        "jest": true
      }
    }
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react", "@typescript-eslint"],
  "rules": {},
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
